<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="?attr/colorPrimary"
            android:paddingTop="@dimen/space_32"
            app:titleMarginTop="6dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white"
            app:title="@string/search_location"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search pill -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/searchCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="8dp"
                app:cardCornerRadius="26dp"
                app:cardUseCompatPadding="true">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_place_hint"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopStart="26dp"
                app:boxCornerRadiusTopEnd="26dp"
                app:boxCornerRadiusBottomStart="26dp"
                app:boxCornerRadiusBottomEnd="26dp"
                app:startIconDrawable="@drawable/ic_search"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionSearch"
                    android:inputType="text|textCapWords|textNoSuggestions"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>

            <!-- Suggestions -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/suggestionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/suggestionsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="320dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:text="@string/no_places_found"
                android:visibility="gone"/>

            <!-- Map card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mapCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:elevation="6dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true">

                <FrameLayout
                    android:id="@+id/mapFrame"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <FrameLayout
                        android:id="@+id/map_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <!-- My Location -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabMyLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_margin="14dp"
                        android:contentDescription="@string/desc_my_location"
                        app:backgroundTint="?attr/colorPrimary"
                        app:srcCompat="@drawable/ic_my_location"
                        app:tint="@android:color/white"/>

                    <!-- Zoom controls (+ / -) -->
                    <LinearLayout
                        android:id="@+id/zoomControls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="86dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabZoomIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fabSize="mini"
                            android:contentDescription="@string/zoom_in"
                            app:backgroundTint="?attr/colorPrimary"
                            app:srcCompat="@drawable/ic_zoom_in"
                            app:tint="@android:color/white"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="8dp"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabZoomOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fabSize="mini"
                            android:contentDescription="@string/zoom_out"
                            app:backgroundTint="?attr/colorPrimary"
                            app:srcCompat="@drawable/ic_zoom_out"
                            app:tint="@android:color/white"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
